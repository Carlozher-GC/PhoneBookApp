<div class="contact-item" id="contact-<%= contact.id %>">
    <div class="contact-item-info">
        <h3><%= "#{contact.first_name} #{contact.last_name}" %></h3>
        <p class="contact-phone">
            <%= render 'icons/phone' %>
            <%= format_phone(contact.phone) %>
        </p>
    </div>
    <%= button_to contact_path(contact), method: :delete, class: 'danger-button delete-button', data: { turbo: false } do %>
        <%= render 'icons/trash' %>
    <% end %>
</div>